<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>NewBank</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>login</filter-name>
    <filter-class>com.filters.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>login</filter-name>
    <url-pattern>/login</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>signup</filter-name>
    <filter-class>com.filters.SignupFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>signup</filter-name>
    <url-pattern>/signup</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>transfer</filter-name>
    <filter-class>com.filters.TransferFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>transfer</filter-name>
    <url-pattern>/transfer</url-pattern>
  </filter-mapping>
  
  <filter>
    <filter-name>newAccount</filter-name>
    <filter-class>com.filters.NewAccountFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>newAccount</filter-name>
    <url-pattern>/newAccount</url-pattern>
  </filter-mapping>
  
  
  <servlet>
    <servlet-name>newAccount</servlet-name>
    <servlet-class>com.controllers.NewAccountServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>newAccount</servlet-name>
    <url-pattern>/newAccount</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
    <servlet-name>transfer</servlet-name>
    <servlet-class>com.controllers.TransferServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>transfer</servlet-name>
    <url-pattern>/transfer</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>enquiry</servlet-name>
    <servlet-class>com.controllers.EnquiryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>enquiry</servlet-name>
    <url-pattern>/enquiry</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.controllers.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>signup</servlet-name>
    <servlet-class>com.controllers.SignupServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>signup</servlet-name>
    <url-pattern>/signup</url-pattern>
  </servlet-mapping>
  <error-page>
    <exception-type>com.exceptions</exception-type>
    <location>/errorPage.jsp</location>
  </error-page>
</web-app>